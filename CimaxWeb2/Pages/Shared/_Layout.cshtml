<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CimaxWeb2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CimaxWeb2.styles.css" asp-append-version="true" />
    <link rel="preload" href="@(Url.Content("~/fonts/MarkPro/MarkPro.ttf"))" as="font" type="font/ttf" crossorigin>
    <style>
        /* Tam genişlik için varsayılan boşlukları kapat */
        html, body { width: 100%; height: 100%; margin: 0; padding: 0; }

        .filter-toggle-btn {
            padding: .4rem .75rem;
            border: 1px solid #d0d7de;
            border-radius: .5rem;
            background: #fff;
            cursor: pointer;
        }

            .filter-toggle-btn:hover {
                background: #f5f5f5;
            }

            .filter-toggle-btn img {
                display: block;
            }

    </style>
</head>
<body class="m-0 p-0">
    <header>
        <!-- container yerine container-fluid + px-0: kenar boşluklarını kaldırır -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid px-0">
                <a class="navbar-brand ms-3" asp-area="" asp-page="/Index"><img src="~/img/Cimax.png" height="30px"/></a>
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index2">Tekli Göster</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="filter-toggle-wrap">
                <button id="toggle-filter"
                        class="filter-toggle-btn"
                        aria-controls="filter-bar"
                        aria-expanded="false">
                    <img src="~/img/filter.png" alt="Filtreler" style="width:20px; height:20px;">
                </button>
            </div>
        </nav>
    </header>

    <!-- container yerine container-fluid + px-0: sayfanın sağ/sol boşluklarını tamamen kapatır -->
    <div class="container-fluid px-0">
        <main>
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted mt-2">
        <div class="container-fluid px-0">
            <div class="d-flex justify-content-between align-items-center px-3" style="min-height: 48px;">
                <span>&copy; 2025 - CimaxWeb2</span>
                <a class="text-muted" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
